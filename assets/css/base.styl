body {
  font-family: "News Gothic MT", verdana;
  font-size: 12px;
  line-height: 1.5;
}

#arduino
  z-index: 50
  position: absolute
  top: 0px
  left: 0px
  bottom: 0px
  background-color: rgba(240, 240, 240, 0.7)
  width: 260px
  padding-right: 12px
  overflow-y: scroll
  .pin {
    margin: 9px;
    padding: 9px
    border: 1px solid #ccc
  }
  .pin input[type=text] {
    width: 40px;
  }
  .pin input[type=range] {
    position: relative;
    top: 4px;
  }


#dataflow
  position: fixed
  top: 0
  left: 0
  right: 260px
  bottom: 0
  
  .state
    position: absolute
    overflow: hidden
    border-radius: 20px
    opacity: 0.2
    -webkit-transition: opacity 0.5s, box-shadow 0.5s
    &.active
      opacity: 1.0
      box-shadow: 0 0 20px rgba(255, 255, 0, 0.2)
    .directhover
      width: 100%
      height: 100%
    .background
      background-color: rgba(0, 0, 0, 0.3)
      border-radius: 20px
      width: 100%
      height: 100%
      z-index: 10
    // .directhover:hover
    //   .background
    //     background-color: rgba(0, 0, 30, 0.3)
  
  .fun
    position: absolute
    background-color: rgba(200, 200, 200, 0.8)
    z-index: 30
  
  .param
    position: absolute
    background-color: #000
    .value
      position: absolute
      left: 0px
      top: 10px
    &:hover
      background-color: #600
  
  svg
    position: absolute
    pointer-events: none
    top: 0px
    left: 0px
    z-index: 20
    path
      stroke: red
      stroke-width: 2
      fill: none
      opacity: 0.2
    .connections
      path
        pointer-events: auto
        &.active
          opacity: 1.0
        &:hover
          stroke-width: 4