body {
  font-family: "News Gothic MT", verdana;
  font-size: 12px;
  line-height: 1.5;
}

#arduino
  position: absolute
  top: 0px
  right: 0px
  width: 260px
  .pin {
    margin-bottom: 18px;
  }
  .pin input[type=text] {
    width: 40px;
  }
  .pin input[type=range] {
    position: relative;
    top: 4px;
  }


#dataflow
  position: fixed
  top: 0
  left: 0
  right: 260px
  bottom: 0
  
  .state
    position: absolute
    overflow: hidden
    .directhover
      width: 100%
      height: 100%
    .background
      background-color: rgba(0, 0, 0, 0.3)
      width: 100%
      height: 100%
      z-index: 10
    .directhover:hover
      .background
        background-color: rgba(0, 0, 30, 0.3)
  
  .fun
    position: absolute
    background-color: rgba(200, 200, 200, 0.8)
    z-index: 30
  
  .param
    position: absolute
    background-color: #000
    .value
      position: absolute
      left: 0px
      top: 10px
    &:hover
      background-color: #600
  
  svg
    position: absolute
    pointer-events: none
    top: 0px
    left: 0px
    z-index: 20